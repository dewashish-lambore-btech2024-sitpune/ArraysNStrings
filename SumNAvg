#include <iostream>
using namespace std;

int main() {
    int numbers[20];
    int count;
    
    cout << "Enter how many values (1-20): ";
    cin >> count;
    
    if(count > 0 && count <= 20) {
        for(int i = 0; i < count; i++) {
            cout << "Value " << (i + 1) << ": ";
            cin >> numbers[i];
        }
        
        int total = 0;
        cout << "\nEntered values: ";
        for(int i = 0; i < count; i++) {
            cout << numbers[i] << " ";
            total += numbers[i];
        }
        
        double average = (double)total / count;
        
        cout << "\nTotal sum: " << total << endl;
        cout << "Average: " << average << endl;
    }
    else {
        cout << "Please enter a number between 1 and 20." << endl;
    }
    
    return 0;
}
