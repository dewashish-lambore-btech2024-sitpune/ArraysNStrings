#include <iostream>
using namespace std;

int main() {
    int data[20];
    int size;
    
    cout << "How many numbers do you want to enter (max 20)? ";
    cin >> size;
    
    if(size > 0 && size <= 20) {
        cout << "Enter " << size << " numbers:" << endl;
        for(int i = 0; i < size; i++) {
            cout << "Number " << (i + 1) << ": ";
            cin >> data[i];
        }
        
        cout << "\nYour numbers: ";
        for(int i = 0; i < size; i++) {
            cout << data[i] << " ";
        }
        cout << endl;
    }
    else {
        cout << "Invalid size! Please enter between 1 and 20." << endl;
    }
    
    return 0;
}
